<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane stylesheets="@styles.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.assignment.superhero.controller.HeroDetailsController">
    <VBox prefHeight="40.0" prefWidth="900.0" spacing="5.0">
       <Label style="-fx-font-size: 20px;" text="Hero Details" />
        <HBox prefHeight="434.0" prefWidth="730.0" spacing="10">
            <ImageView fx:id="heroImageView" fitHeight="434.0" fitWidth="312.0" pickOnBounds="true" preserveRatio="true" />
            <VBox prefHeight="434.0" prefWidth="298.0">
                <padding>
                    <Insets bottom="10.0" />
                </padding>
                <HBox spacing="10.0">
                <Label text="Name:" /> <Label fx:id="nameLabel" />
                </HBox>
                <HBox prefHeight="20.0" prefWidth="229.0" spacing="10.0">
                <Label text="full Name:" /> <Label fx:id="idLabel" />
                </HBox>
                <HBox spacing="10.0">
                <Label text="Publisher:" /> <Label fx:id="publisher" />
                </HBox>
                <HBox spacing="10.0">
                <Label text="Alignment:" /> <Label fx:id="alignment" />
                </HBox>
                <Label text="Power Status:" />
               <ListView fx:id="powersListView" prefHeight="144.0" prefWidth="298.0" />
                <HBox alignment="BOTTOM_RIGHT"  spacing="10.0" >
                    <padding>
                        <Insets top="10.0" right="10.0" />
                    </padding>

               <Button fx:id="btnBack" alignment="BOTTOM_CENTER" mnemonicParsing="false" onAction="#getBack" text="Back" textAlignment="RIGHT" />
                </HBox>
                <!-- Add more labels for other details -->
            </VBox>
        </HBox>
    </VBox>

</AnchorPane>
