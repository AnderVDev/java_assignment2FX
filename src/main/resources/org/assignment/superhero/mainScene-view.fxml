<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="1000.0" prefWidth="900.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.assignment.superhero.MainSceneController">
  <VBox id="titlesListView" prefHeight="67.0" prefWidth="900.0" spacing="5.0">
  <HBox alignment="CENTER" prefHeight="278.0" prefWidth="900.0" spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>
  <Label text="SUPER HEROES" />
  </HBox>
  </VBox>
  <VBox alignment="BOTTOM_CENTER" prefHeight="1000.0" prefWidth="735.0" spacing="30.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
    <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <HBox prefHeight="100.0" prefWidth="880.0" spacing="10.0">
      <padding>
        <Insets top="30.0" />
      </padding>
      <ProgressBar fx:id="progressBar" prefHeight="40.0" prefWidth="120.0" progress="0.0" />
      <TextField fx:id="searchTextField" prefHeight="40.0" prefWidth="149.0" promptText="Enter a Super Hero Name" />
      <Button mnemonicParsing="false" onAction="#searchForHeroes" text="Search" />
    </HBox>
    <HBox fx:id="resultsBox" alignment="CENTER" spacing="20.0">
      <VBox id="titlesListView" fx:id="titlesVBox" spacing="5.0">
        <ListView fx:id="listView" prefHeight="450.0" prefWidth="553.0">
          <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
          </padding>
        </ListView>
        <BorderPane>
          <left>
            <Label fx:id="resultsMsgLabel" text="Label" BorderPane.alignment="CENTER" />
          </left>
          <right>
            <Button fx:id="fetchAllButton" mnemonicParsing="false" onAction="#fetchAllHeroes" text="Fetch All" BorderPane.alignment="CENTER" />
          </right>
        </BorderPane>
      </VBox>
      <VBox fx:id="selectedVBox" alignment="CENTER">
        <ImageView fx:id="posterImageView" fitHeight="438.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true" />
        <Button mnemonicParsing="false" onAction="#getHeroeDetails" text="Details &gt;&gt;" />
      </VBox>
    </HBox>
    <Label id="msgLabel" fx:id="msgLabel" text="Label" />
  </VBox>
</AnchorPane>
